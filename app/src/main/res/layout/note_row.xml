<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            tools:text="android"
            android:id="@+id/txt_noteRow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_noteRow_desc"
            android:layout_margin="8dp"
            tools:text="click android course"
            android:layout_below="@+id/txt_noteRow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_noteRow_edit"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/txt_noteRow_desc"
            app:srcCompat="@drawable/ic_baseline_edit_calendar_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_noteRow_delete"
            android:layout_margin="8dp"
            android:layout_below="@+id/txt_noteRow_desc"
            android:layout_toLeftOf="@+id/img_noteRow_edit"
            app:srcCompat="@drawable/ic_baseline_delete_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/txt_noteRow_desc"
            app:srcCompat="@drawable/ic_baseline_timer_24"
            android:id="@+id/img_noteRow_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_below="@id/txt_noteRow_desc"
            tools:text="12:23"
            android:layout_toRightOf="@id/img_noteRow_clock"
            android:id="@+id/txt_noteRow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>